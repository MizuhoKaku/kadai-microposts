<% unless current_user == micropost.user %>
    <% if current_user.like?(micropost) %>
      <%= form_for(current_user.user_microposts.find_by(micropost_id: micropost.id), html: { method: :delete}) do |f| %>
        <%= hidden_field_tag :micropost_id, micropost.id %>
        <%= f.submit 'お気に入り解除', class: 'btn btn-danger ' %>
      <% end %>
    <% else %>
      <%= form_for(current_user.user_microposts.build) do |f| %>
        <%= hidden_field_tag :micropost_id, micropost.id %>
        <%= f.submit 'お気に入り', class: 'btn btn-primary ' %>
      <% end %>
    <% end %>
<% end %>    
        
      